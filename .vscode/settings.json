{
  "tailwindCSS.configPath": "${workspaceFolder}/tailwind.config.js",
  // Editor settings
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "json.schemas": [],

  // 控制相关文件嵌套展示
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).test.ts, $(capture).test.tsx, $(capture).spec.ts, $(capture).spec.tsx, $(capture).d.ts, vite-env.d.ts",
    "*.tsx": "$(capture).test.ts, $(capture).test.tsx, $(capture).spec.ts, $(capture).spec.tsx,$(capture).d.ts",
    "*.env": "$(capture).env.*",
    "README.md": "README*,CHANGELOG*,LICENSE,CNAME",
    "package.json": ".gitattributes,.gitignore,.gitpod.yml,.npmrc,.browserslistrc,.node-version,.git*,.tazerc.json,pnpm-lock.yaml,pnpm-workspace.yaml",
    "eslint*": ".eslintignore,.prettierignore,.stylelintignore,.commitlintrc.*,.prettierrc*,stylelint.config.*,.lintstagedrc.mjs,cspell.json,lefthook.yml",
    "tailwind.config.mjs": "postcss.*"
  }
}
